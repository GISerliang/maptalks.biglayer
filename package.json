{
  "name": "maptalks.webgl",
  "version": "0.1.0",
  "description": "WebGL renderer for maptalks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maptalks/maptalks.webgl.git"
  },
  "scripts": {
    "lint": "eslint src/**/*.js test/**/*.js --fix",
    "test": "gulp test",
    "pretest": "npm run lint",
    "build": "browserify --external maptalks src/maptalks.webgl.js > dist/maptalks.webgl.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "maptalks": "global:maptalks"
  },
  "devDependencies": {
    "browserify": "^13.1.0",
    "browserify-shim": "^3.8.12",
    "eslint": "^2.4.0",
    "eslint-config-maptalks": "^0.2.1",
    "expect.js": "^0.3.1",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-footer": "^1.0.5",
    "gulp-gzip": "^1.2.0",
    "gulp-header": "^1.7.1",
    "gulp-mocha": "^2.2.0",
    "gulp-rename": "~1.2.2",
    "gulp-uglify": "^1.5.1",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^1.0.1",
    "karma-expect": "^1.1.2",
    "karma-mocha": "^1.0.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "minimist": "^1.2.0",
    "mocha": "^2.4.5",
    "phantomjs-prebuilt": "^2.1.7",
    "sinon": "^1.14.1"
  },
  "dependencies": {
    "gl-matrix": "^2.3.2",
    "mapbox-gl-shaders": "https://github.com/mapbox/mapbox-gl-shaders.git"
  },
  "peerDependencies": {
    "maptalks": "<2.0.0"
  }
}
